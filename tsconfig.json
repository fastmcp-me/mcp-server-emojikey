{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": false,
    "checkJs": false
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules", 
    "build",
    "src/edge-functions/**/*",
    "src/handlers_integration.ts",
    "src/vector_config.ts"
  ]
}
